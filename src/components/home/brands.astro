---
import { TypinksLogo } from "../../assets/logos/TypinksLogo";
import { KroengerLogo } from "../../assets/logos/KroengerLogo";
---

<section class="py-12 sm:py-24 bg-bgDark1 w-full lg:mt-16 mb-8 lg:mb-16">
  <div
    class="container px-4 mx-auto 2xl:w-[1200px] xl:w-[1100px] lg:w-[1000px] md:w-4/5"
  >
    <div
      class="flex lg:flex-row flex-col items-center -mx-4 justify-center lg:text-left text-center"
    >
      <div class="w-full lg:w-1/2 px-4 mb-12 lg:mb-0">
        <div class="flex flex-col">
          <h2
            class="mb-2 text-4xl sm:text-5xl 2xl:text-6xl font-bold tracking-normal text-primaryText"
          >
            Used by brands
          </h2>
          <h2
            class="text-4xl sm:text-5xl 2xl:text-6xl font-bold tracking-normal text-secondaryColor"
          >
            all over the planet
          </h2>
        </div>
      </div>
      <div class="w-2/3 sm:w-[620px] lg:w-1/2 mx-auto lg:mx-0 lg:pl-10">
        <div class="flex flex-wrap -m-4">
          <div class="w-1/2 sm:w-1/3 py-6 flex justify-center">
            <a href="https://typinks.com" target="_blank">
              <TypinksLogo />
            </a>
          </div>
          <div class="w-1/2 sm:w-1/3 py-6 flex justify-center">
            <a href="https://kroenger.org" target="_blank">
              <KroengerLogo />
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
