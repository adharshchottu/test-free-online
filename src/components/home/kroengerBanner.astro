---
import worldPlantMilkDay from "../../assets/images/kroenger/World-Plant-Milk-Day.png";
import sharkAwarnessDay from "../../assets/images/kroenger/Shark-awarness-day.jpg";
import { CheckArrowIcon } from "@/assets/icons/CheckArrowIcon";
import { Image } from "astro:assets";
---

<section
  class="w-full bg-bgDark2 mt-12 sm:mt-24 mb-12 lg:my-20 lg:mb-24 pt-4"
  id="kroenger"
>
  <div
    class="flex flex-wrap items-center 2xl:w-[1450px] xl:w-[1300px] w-11/12 mx-auto md:pl-4 xl:pr-16 xl:pl-16"
  >
    <div
      class="w-11/12 sm:w-3/4 mx-auto lg:w-1/3 flex flex-wrap lg:mx-8 sm:pr-8 justify-center order-last lg:order-first"
    >
      <div
        class="mb-8 lg:mb-0 w-full px-2 lg:pl-16 flex flex-col justify-center md:pl-8"
      >
        <div class="mb-4 py-3 md:pl-3 md:pr-20 lg:pr-12 rounded">
          <Image
            src={worldPlantMilkDay}
            alt="World Plant Milk Day"
            class="rounded-xl main-border-gray"
          />
        </div>
        <div class="py-3 md:pl-20 lg:pl-12 md:pr-2 rounded">
          <Image
            src={sharkAwarnessDay}
            alt="Shark awarness day"
            class="rounded-xl main-border-gray"
          />
        </div>
      </div>
    </div>

    <div class="w-full lg:w-1/2 mb-12 lg:mb-0 xl:pl-8">
      <div class="mx-auto lg:mx-auto w-11/12 sm:w-4/5 md:w-3/4 lg:w-unset">
        <span class="block-subtitle">Kroenger Poster Designer</span>
        <h2 class="mt-6 mb-8 text-4xl lg:text-5xl block-big-title">
          Observance Day Poster Generator
        </h2>
        <p class="mb-12 text-secondaryText leading-loose">
          Kroenger poster generator built on top of Canvas API with JS for
          seamless poster generation for environmental observance days
        </p>
        <ul class="mb-6 text-primaryText">
          <li class="mb-4 flex">
            <CheckArrowIcon />
            <span>Custom Icon Upload</span>
          </li>
          <li class="mb-4 flex">
            <CheckArrowIcon />
            <span>Smart date recognizition</span>
          </li>
          <li class="mb-4 flex">
            <CheckArrowIcon />
            <span>Customizable text area</span>
          </li>
        </ul>
        <a
          class="contained-button w-64 sm:w-52 h-12"
          href="/kroenger-poster-generator"
          aria-label="Generage Poster for Kroenger"
        >
          Generage Poster
        </a>
      </div>
    </div>
  </div>
</section>
