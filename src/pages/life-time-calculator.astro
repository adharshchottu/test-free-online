---
export const prerender = false

import Layout from '../layouts/Layout.astro'
import { Navbar } from '../components/Navbar.jsx'
import '../styles/Theme.css'
import LifeTimeCalculatorComponent from '@/components/life-time-calculator/lifeTimeCalculator.vue'
import Confetti from '@/components/Confetti.astro'
import Footer from '@/components/Footer.vue'

export async function getStaticProps() {
  const url = new URL(Astro.url);
  const gente = url.searchParams.get('gente') || '';

  return { props: { gente } };
}
---

<Layout title="Life Time Calculator" description='find out how long you have lived for?' ogImage={`https://sse.test-free.online/api/life-time?gente=${Astro.props.gente}`} ogImageCustom={true}>
  <Navbar client:load />
  <LifeTimeCalculatorComponent client:only="vue" />
  <Confetti />
  <Footer client:only="vue" />
</Layout>
