---
import Layout from '../layouts/Layout.astro'
import { Hero } from '../components/Hero.jsx'
import { Navbar } from '../components/Navbar.jsx'
import { TypinksBanner } from '../components/TypinksBanner.jsx'
import { KroengerBanner } from '../components/KroengerBanner.jsx'
import { ServerSideEventsBanner } from '../components/ServerSideEventsBanner.jsx'
import { Brands } from '../components/Brands.jsx'
import { ScrollUpButton } from '../components/ScrollUpButton'
import '../styles/Theme.css'
import '../styles/Diagonals.css'
import UserCount from '@/components/UserCount'
import Confetti from '@/components/Confetti.astro'
---

<Layout title="Test Free Online" description='Access online tools like a poster generator, Redis Lua script tester, and server-sent events tester. Test and create easily, all in one place!'>
  <Navbar client:load />
  <Confetti />
  <Hero client:load />
  <TypinksBanner client:load />
  <KroengerBanner client:load />
  <ServerSideEventsBanner client:load />
  <Brands client:load />
  <ScrollUpButton client:load />
  <UserCount client:only="react" />
</Layout>
